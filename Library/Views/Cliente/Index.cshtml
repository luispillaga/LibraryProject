@model IEnumerable<Library.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-advance table-hover">
    <tr>
        <th>
            <i class="fas fa-user"> </i>@Html.DisplayNameFor(model => model.cliente_name)
        </th>
        <th>
            <i class="fas fa-id-card"> </i>@Html.DisplayNameFor(model => model.cliente_cedula)
        </th>
        <th>
            <i class="fas fa-mobile-alt"> </i>@Html.DisplayNameFor(model => model.cliente_telefono)
        </th>
        <th>
            <i class="fas fa-map-marker-alt"> </i>@Html.DisplayNameFor(model => model.Ciudad.ciudad_nombre)
        </th>
        <th><i class="fas fa-cogs"></i>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cliente_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente_cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente_telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad.ciudad_nombre)
        </td>
        <td>
            <div class="btn-group">
                <a class="btn btn-primary" href="@Url.Action("Edit", "Cliente", new { id = item.ciudad_id})"><i class="fas fa-edit"></i></a>
                <a class="btn btn-success" href="@Url.Action("Details", "Cliente", new { id = item.ciudad_id})"><i class="fas fa-eye"></i></a>
                <a class="btn btn-danger" href="@Url.Action("Delete", "Cliente", new { id = item.ciudad_id})"><i class="fas fa-trash"></i></a>
            </div>
        </td>
    </tr>
}

</table>
